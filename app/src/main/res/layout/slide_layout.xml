<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_height="match_parent">

    
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <ImageView
                android:id="@+id/slide_image"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/hotel1" />

            <TextView
                android:layout_below="@+id/slide_image"
                android:id="@+id/slide_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="serif-monospace"
                android:text="Hotel"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/black"
                android:textSize="28dp" />

            <TextView
                android:id="@+id/slide_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/slide_heading"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Chilling out on the bed in your hotel room watching television, while wearing your own pajamas, is sometimes the best part of a vacation."
                android:textAlignment="center"
                android:textSize="16sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>